{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "ScanTime": "00:30",
    "Watchlist": [],
    "Strategy": {
      "MinExpiryDays": 14,
      "MaxExpiryDays": 21,
      "MinConfidence": 0.0
    },
    "Consul": {
      "Host": "http://consul:8500",
      "ServiceName": "TradingApi",
      "ServicePort": 5001
    },
    "Database": {
      "ConnectionString": "Data Source=/app/data/trading.db"
    },
    "Broker": {
      "DefaultBroker": "Exante",
      "Exante": {
        "ClientId": "",
        "ApiKey": "",
        "ApiSecret": "",
        "AccountId": "",
        "Environment": "Demo",
        "BaseUrl": "https://api-demo.exante.eu"
      }
    },
    "OptionsDiscovery": {
      "Enabled": true,
      "UseGroupsEndpoint": true,
      "MinOpenInterest": 0,
      "MinVolume": 0,
      "SampleOptionsPerUnderlying": 10,
      "FallbackToWatchlist": false,
      "IncludeCallOptions": false,
      "MaxExpiryDays": 90
    },
    "FinancialHealth": {
      "EnablePreFiltering": true,
      "MinPiotroskiFScore": 7,
      "MinAltmanZScore": 1.81,
      "DataRefreshDays": 7,
      "BulkProcessingBatchSize": 100
    }
  }
}
