{
  "AppSettings": {
    "ScanTime": "04:00",
    "Watchlist": ["SPY", "QQQ", "AAPL", "MSFT", "GOOGL", "NVDA", "AMD", "TSLA"],
    "Strategy": {
      "MinExpiryDays": 14,
      "MaxExpiryDays": 21,
      "MinConfidence": 0.8
    },
    "Consul": {
      "Host": "http://consul:8500",
      "ServiceName": "TradingService"
    },
    "Database": {
      "ConnectionString": "Data Source=/app/data/trading.db"
    },
    "Broker": {
      "DefaultBroker": "Exante",
      "Exante": {
        "ClientId": "",
        "ApiKey": "",
        "ApiSecret": "",
        "AccountId": "",
        "Environment": "Demo",
        "BaseUrl": "https://api-demo.exante.eu"
      }
    },
    "OptionsDiscovery": {
      "Enabled": true,
      "UseGroupsEndpoint": true,
      "MinOpenInterest": 100,
      "MinVolume": 50,
      "SampleOptionsPerUnderlying": 3,
      "FallbackToWatchlist": true,
      "IncludeCallOptions": true,
      "MaxExpiryDays": 90
    },
    "FinancialHealth": {
      "EnablePreFiltering": true,
      "MinPiotroskiFScore": 7,
      "MinAltmanZScore": 1.81,
      "BatchConcurrency": 5
    },
    "RateLimiting": {
      "EnableRetryOn429": true,
      "MaxRetries": 3,
      "InitialRetryDelaySeconds": 60,
      "UseExponentialBackoff": true,
      "AttemptTimeoutSeconds": 60
    },
    "SimFin": {
      "BaseUrl": "https://backend.simfin.com/api/v3",
      "ApiKey": "",
      "TimeoutSeconds": 30
    }
  }
}
